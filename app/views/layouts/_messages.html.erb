<%# Rails flash messages styled for Bootstrap 3.0 %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div data-alert class="alert-box <%= name.to_s == 'notice' ? 'success' : 'alert' %> radius">
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
<% end %>
